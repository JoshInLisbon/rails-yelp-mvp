<p>List of all restaurants:</p>

<%= link_to '+ New restaurant', new_restaurant_path, class: 'btn btn-primary mb-3' %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
    </tr>
  </thead>
  <tbody>

    <% @restaurants.each do |restaurant| %>

      <tr>
        <td><%= link_to restaurant.name, restaurant_path(restaurant) %></td>
        <td><%= restaurant.category.capitalize %></td>
      </tr>

    <% end %>

  </tbody>
</table>


