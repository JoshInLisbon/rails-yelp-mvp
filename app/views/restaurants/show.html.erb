<% case @restaurant.category %>
<% when 'chinese' then flag = '🇨🇳🥡' %>
<% when 'italian' then flag = '🇮🇹🍕' %>
<% when 'japanese' then flag = '🇯🇵🍜' %>
<% when 'french' then flag = '🇫🇷🥖' %>
<% when 'belgian' then flag = '🇧🇪🍫' %>
<% end %>
<h1><%= flag %> <i><%= @restaurant.name %></i></h1>

<table class="table mt-4">
  <tbody>
      <tr>
        <th>Address</th>
        <td><%= @restaurant.address %></td>
      </tr>
      <tr>
        <th>Phone Number</th>
        <td><%= @restaurant.phone_number %></td>
      </tr>
      <tr>
        <th>Category</th>
        <td><%= @restaurant.category.capitalize %></td>
      </tr>
      <tr>
        <th>Reviews:</th>

        <% if notice %>

          <td class="text-success">
            <%= notice %>
          </td>

        <% else %>

          <td>
            <%= link_to "+ New review for #{@restaurant.name}", new_restaurant_review_path(@restaurant) %>
          </td>

        <% end %>

      </tr>

      <% @reviews.each do |review| %>

      <tr>
        <td><%= '⭐️' * review.rating %></td>
        <td><%= review.content %></td>
      </tr>

      <% end %>


  </tbody>
</table>
